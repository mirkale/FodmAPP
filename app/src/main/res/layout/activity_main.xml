<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE2E2E0"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="38dp"
        android:background="@color/colorPrimary"
        android:onClick="searchButtonPressed"
        android:text="HAKU"
        app:layout_constraintBottom_toTopOf="@+id/myListButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@color/colorPrimary"
        android:onClick="myListButtonPressed"
        android:text="OMA"
        app:layout_constraintStart_toStartOf="@+id/searchButton"
        app:layout_constraintTop_toBottomOf="@+id/searchButton" />

    <Button
        android:id="@+id/myDiaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@color/colorPrimary"
        android:onClick="myDiaryButtonPressed"
        android:text="PÄIVÄKIRJA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myListButton" />

    <Button
        android:id="@+id/recipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@color/colorPrimary"
        android:onClick="recipesButtonPressed"
        android:text="RESEPTIT"
        app:layout_constraintStart_toStartOf="@+id/ibsButton"
        app:layout_constraintTop_toBottomOf="@+id/myDiaryButton" />

    <Button
        android:id="@+id/ibsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@color/colorPrimary"
        android:onClick="ibsButtonPressed"
        android:text="IBS"
        app:layout_constraintStart_toStartOf="@+id/guideButton"
        app:layout_constraintTop_toBottomOf="@+id/recipeButton" />

    <Button
        android:id="@+id/guideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@color/colorPrimary"
        android:onClick="guideButtonPressed"
        android:text="OHJE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibsButton" />
</android.support.constraint.ConstraintLayout>